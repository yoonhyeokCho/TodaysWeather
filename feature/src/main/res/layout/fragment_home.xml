<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8F4FA">

        <Button
            android:id="@+id/Region_btn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_yellow_25_dp"
            android:fontFamily="@font/jua"
            android:textAppearance="@style/RegionTextStyleBold"
            android:text="서울"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temperatureText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/jua"
            android:text="최고 기온"
            android:textAppearance="@style/TemperatureTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Region_btn" />

        <TextView
            android:id="@+id/highest_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="100dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toEndOf="@id/temperatureText1"
            app:layout_constraintTop_toBottomOf="@id/Region_btn" />

        <TextView
            android:id="@+id/temperatureText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/jua"
            android:text="최저 기온"
            android:textAppearance="@style/TemperatureTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temperatureText1" />

        <TextView
            android:id="@+id/lowest_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="100dp"
            android:text="-9"
            android:textAppearance="@style/TemperatureTextStyle"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toEndOf="@+id/temperatureText1"
            app:layout_constraintTop_toBottomOf="@+id/Region_btn" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rainfallBox"
            android:layout_width="157dp"
            android:layout_height="89dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/bg_yellow_25_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/temperatureText2">

            <TextView
                android:id="@+id/rainfall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="강우"
                android:textAppearance="@style/TemperatureTextStyle"
                app:layout_constraintEnd_toEndOf="@id/rainfallBox"
                app:layout_constraintStart_toStartOf="@id/rainfallBox"
                app:layout_constraintTop_toTopOf="@id/rainfallBox" />

            <TextView
                android:id="@+id/rainfall_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="11"
                android:textAppearance="@style/DataTextStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rainfall"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/humidityBox"
            android:layout_width="157dp"
            android:layout_height="89dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/bg_yellow_25_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@id/rainfallBox"
            app:layout_constraintTop_toBottomOf="@id/temperatureText2">

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="습도"
                android:textAppearance="@style/TemperatureTextStyle"
                app:layout_constraintEnd_toEndOf="@id/humidityBox"
                app:layout_constraintStart_toStartOf="@id/humidityBox"
                app:layout_constraintTop_toTopOf="@id/humidityBox" />

            <TextView
                android:id="@+id/humidity_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="11"
                android:textAppearance="@style/DataTextStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/humidity"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sky_stateBox"
            android:layout_width="157dp"
            android:layout_height="89dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/bg_yellow_25_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rainfallBox"
            app:layout_constraintVertical_bias="0.012">

            <TextView
                android:id="@+id/sky_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="하늘 상태"
                android:textAppearance="@style/TemperatureTextStyle"
                app:layout_constraintEnd_toEndOf="@id/sky_stateBox"
                app:layout_constraintStart_toStartOf="@id/sky_stateBox"
                app:layout_constraintTop_toTopOf="@id/sky_stateBox" />

            <TextView
                android:id="@+id/sky_state_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="11"
                android:textAppearance="@style/DataTextStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sky_state"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/windBox"
            android:layout_width="157dp"
            android:layout_height="89dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/bg_yellow_25_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toEndOf="@id/sky_stateBox"
            app:layout_constraintTop_toBottomOf="@id/rainfallBox"
            app:layout_constraintVertical_bias="0.006">

            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="하늘 상태"
                android:textAppearance="@style/TemperatureTextStyle"
                app:layout_constraintEnd_toEndOf="@id/windBox"
                app:layout_constraintStart_toStartOf="@id/windBox"
                app:layout_constraintTop_toTopOf="@id/windBox" />

            <TextView
                android:id="@+id/wind_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="11"
                android:textAppearance="@style/DataTextStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wind"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
